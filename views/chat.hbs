    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Node.js Bucket List App</title>

    <!-- Bootstrap core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../style/cover.css" rel="stylesheet">
    <link href="../style/signin.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/alertify.min.css"/>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/themes/default.min.css"/>


  </head>

  <body>



  <div class="container">
    <div class="row">
<div class="col-lg-12 col-sm-3">
  <section class="section">
  <div class="connected">
      <div class="row">
        <div class="col-lg-3 col-sm-3 ol-sm-3">
    <img src="../style/unnamed.jpg" id="creatorImage" />
    </div>
    <div class="col-lg-9 col-sm-3">
    <div class="infoConnected">
      <h2>Who are you?</h2>
      <br/>
       <form class="loginForm">
         <label for="inputEmail" class="sr-only">Nom</label>
         <input type="text" id="yourName" placeholder="Your nick name" class="form-control"  required="" autofocus="">
         <label for="inputPassword" class="sr-only">nombre</label>
         <input type="text" id="yourEmail" placeholder="Your email address"  class="form-control" required="">

         <input style="margin-left: 9px;" type="submit" id="btnSignIn" class="btn btn-lg btn-primary btn-block" value="ENTER" />
       </form>
       </div>
       </div>
        </div>
     </div>


     <div class="personinside">

 			<img src="../style/unnamed.jpg" id="ownerImage" />

 			<div class="infoInside">
 				<h2>Chat with <span class="nickname-chat"></span></h2>
 				<br/>

 				<form class="loginForm">
 					<input type="text" id="hisName" placeholder="Your nick name" class="form-control" />
 					<input type="text" id="hisEmail" placeholder="Your email address"  class="form-control" />
 					<input style="margin-left: 9px;" type="submit" id="hisEnter" class="btn btn-lg btn-primary btn-block" value="CHAT" />
 				</form>

 			</div>

 		</div>

    <div class="invite-textfield">

			<h2>Oops, there are no other people in this chat!</h2>
			<h5>Invite a friend by sending them this URL</h5>

			<div class="link">
				<a title="Invite a friend" href="" id="link"></a>
			</div>

		</div>

    <div class="left">

			<img src="../style/unnamed.jpg" id="leftImage" />

			<div class="info">
				<h2><span class="nickname-left"></span> has left this chat.</h2>
				<h5>Invite somebody else by sending them this page.</h5>
			</div>

		</div>

    <div class="toomanypeople">

			<h2>Oops, you can not join this chat!</h2>
			<h5>There are already two people in it. Would you like to create a <a title="New Room" href="/create" id="room">new room</a>?</h5>

		</div>

    <div class="nomessages">

			<img src="../style/unnamed.jpg" id="noMessagesImage" />

			<div class="info">
				<h2>You are chatting with <span class="nickname-chat"></span>.</h2>
				<h5>Send them a message from the form below!</h5>
			</div>

		</div>

    <div class="chatscreen">

			<ul class="chats">
				<!-- The chat messages will go here -->
			</ul>

		</div>
</section>
</div>
<div class="col-lg-6">

  </div>
  </div>
  </div>



  </body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
