<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script src="../js/moment.min.js"></script>
<script src="../js/file.js"></script>
<script src="../js/chat.js"></script>
</html>
